<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Header1">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">casual</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="Header2" parent="Header1">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Button">
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Button_center" parent="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">50dp</item>
    </style>

    <style name="Header3" parent="Header2">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TimerSeekBar" parent="Widget.AppCompat.SeekBar.Discrete">
        <item name="android:progressBackgroundTint">#f4511e</item>
        <item name="android:progressTint">#EA1361</item>
        <item name="android:colorControlActivated">#E53935</item>
        <item name="android:thumbTint">#BDA655</item>
    </style>

</resources>