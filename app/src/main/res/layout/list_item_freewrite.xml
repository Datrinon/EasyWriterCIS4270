<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="25dp">

    <TextView
        android:id="@+id/freeWriteTitle"
        android:textSize="22sp"
        android:fontFamily="casual"
        android:textFontWeight="650"
        android:textColor="@color/black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="My Free Write"
        app:layout_constraintRight_toLeftOf="@id/freeWriteDate"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_weight="3"
        />

    <TextView
        android:id="@+id/freeWriteDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Date"
        android:gravity="right"
        android:autoSizeTextType="uniform"
        android:textFontWeight="450"
        android:maxLines="1"
        android:fontFamily="sans-serif-condensed-medium"
        app:layout_constraintLeft_toRightOf="@id/freeWriteTitle"
        app:layout_constraintBottom_toBottomOf="@id/freeWriteTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>