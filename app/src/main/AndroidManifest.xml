<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.trinhdan.easywriter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EasyWriter">
        <activity
            android:name=".FreewriteListActivity"
            android:label="@string/title_freewrite_list"
            android:theme="@style/Theme.EasyWriter.NoActionBar"></activity>
        <activity
            android:name=".FreewriteDetailActivity"
            android:label="@string/title_freewrite_detail"
            android:parentActivityName=".FreewriteListActivity"
            android:theme="@style/Theme.EasyWriter.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.trinhdan.easywriter.FreewriteListActivity" />
        </activity>
        <activity android:name=".ViewHistoryActivity" />
        <activity
            android:name=".MainActivity"
            android:label="Main Menu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>