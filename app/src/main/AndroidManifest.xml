<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.trinhdan.easywriter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EasyWriter">
        <activity android:name=".controllers.FreeWriteDetailsActivity"></activity>
        <activity
            android:name=".controllers.FreeWriteOverActivity"
            android:parentActivityName=".controllers.MainActivity" />
        <activity
            android:name=".controllers.FreeWriteActivity"
            android:parentActivityName=".controllers.FreeWriteConfigActivity" />
        <activity
            android:name=".controllers.FreeWriteConfigActivity"
            android:label="Free Write Settings"
            android:parentActivityName=".controllers.MainActivity" />
        <activity
            android:name=".controllers.FreeWriteListActivity"
            android:parentActivityName=".controllers.MainActivity" />
        <activity android:name=".controllers.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>